<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="georgiopoulos.infootball">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".application.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.SoccerLeagues.SoccerLeaguesActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".ui.League.LeagueActivity"
            android:theme="@style/AppTheme.NoActionBar_StatusBar" />
        <activity
            android:name=".ui.Team.TeamRosterActivity"
            android:theme="@style/AppTheme.NoActionBar_StatusBar" />
        <activity
        android:name=".ui.LiveScores.LiveScoresActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>