<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view_item_recycler_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_margin_vertical_big_activity"
    android:layout_marginEnd="@dimen/card_margin_horizontal_big_activity"
    android:layout_marginStart="@dimen/card_margin_horizontal_big_activity"
    android:layout_marginTop="@dimen/card_margin_vertical_big_activity"
    android:background="@color/icons"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/card_recycler_corner_radius"
    card_view:cardElevation="@dimen/card_recycler_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/text_margin">

        <TextView
            android:id="@+id/next_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Huddersfield Town vs Huddersfield Town"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/primary_text" />


        <ImageView
            android:id="@+id/homeTeamJersey"
            android:layout_width="@dimen/badge"
            android:layout_below="@+id/next_event"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/text_margin"
            android:layout_height="@dimen/teamLogoHeight"
            android:src="@drawable/liverpool_jersey" />

        <TextView
            android:id="@+id/next_event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/homeTeamJersey"
            android:layout_margin="@dimen/text_margin_small"
            android:layout_centerHorizontal="true"
            android:text="22/10/17"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/secondary_text" />

        <TextView
            android:id="@+id/next_event_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/next_event_date"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/text_margin_very_small"
            android:text="14:00"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/secondary_text" />

        <ImageView
            android:id="@+id/awayTeamJersey"
            android:layout_width="@dimen/badge"
            android:layout_height="@dimen/teamLogoHeight"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/next_event"
            android:layout_alignTop="@+id/homeTeamJersey"
            android:src="@drawable/liverpool_jersey" />

        <TextView
            android:id="@+id/next_event_stadium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_below="@id/homeTeamJersey"
            android:layout_marginTop="@dimen/text_margin_small"
            android:text="Anfield, Liverpool"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/secondary_text" />

    </RelativeLayout>
</android.support.v7.widget.CardView>