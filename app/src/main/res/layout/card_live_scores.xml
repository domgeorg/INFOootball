<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_item_recycler_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_margin_vertical_big_activity"
    android:layout_marginEnd="@dimen/card_margin_horizontal_big_activity"
    android:layout_marginStart="@dimen/card_margin_horizontal_big_activity"
    android:layout_marginTop="@dimen/card_margin_vertical_big_activity"
    android:background="@color/icons"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/card_recycler_corner_radius"
    card_view:cardElevation="@dimen/card_recycler_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/text_margin">

        <com.santalu.diagonalimageview.DiagonalImageView
            android:id="@+id/league_badge_diagonal_image_view"
            android:layout_width="@dimen/league_badge_card_live_scores_diagonal_image_view"
            android:layout_height="@dimen/league_badge_card_live_scores_diagonal_image_view"
            android:layout_marginRight="@dimen/text_margin_very_small"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:contentDescription="@string/league_badge"
            android:src="@drawable/premier_league_badge"
            app:di_borderEnabled="false"
            app:di_direction="top"
            app:di_overlap="0dp"
            app:di_position="right" />

        <RelativeLayout
            android:id="@+id/contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/league_badge_diagonal_image_view"
            android:layout_alignParentRight="true"
            android:gravity="center">

            <TextView
                android:id="@+id/league_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/primary_text"
                android:text="Premier League"/>

            <TextView
                android:id="@+id/match_name"
                android:layout_below="@id/league_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/text_margin_small"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/primary_text"
                android:text="Man City VS Arsenal"/>

            <TextView
                android:id="@+id/match_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/match_name"
                android:layout_marginTop="@dimen/text_margin_small"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/primary_text"
                android:text="0-1"/>

            <TextView
                android:id="@+id/match_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/match_score"
                android:layout_marginTop="@dimen/text_margin_very_small"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/primary_text"
                android:text="Halftime"/>

            <TextView
                android:id="@+id/match_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/match_time"
                android:layout_marginTop="@dimen/text_margin_very_small"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/secondary_text"
                android:text="São Januário"/>

        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>